<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e0815"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/ans_text"
        android:src="@drawable/coin" />

    <View
        android:layout_width="70dp"
        android:layout_height="2dp"
        android:layout_below="@id/ans_text"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:background="#ffece1" />

    <ImageView
        android:id="@+id/idicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_arrow_drop_down_black_24dp" />

    <ImageView
        android:id="@+id/spin_wheel_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/idicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/wheel2" />

